doctype html
html
    head
        block title
            title Home
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/stylesheets/feedback.css")
        meta(name="viewport" content="width=device-width, initial-scale=1")
    body.feedback-confirmation
        block content
            div.feedback-confirmation-box
                div.feedback-confirmation-box-image
                    img(src="/img/feedback-success.png")
                div.feedback-confirmation-box-text= __('feedback_confirmation_text')
                a.feedback-confirmation-box-button(href="inapp://back")= __('OK')