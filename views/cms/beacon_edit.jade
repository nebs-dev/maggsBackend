extends ./base
block title
    title= __('Beacon edit')
block append header_styles
    link(rel="stylesheet" href="/stylesheets/forms.css")
    link(rel="stylesheet" href="/stylesheets/coupon_preview.css")
    link(rel="stylesheet" href="/stylesheets/bootstrap-datetimepicker.css")
block container-content
     .row
        .col-sm-12.col-md-12
            h1= __('Edit beacon')
        .col-sm-12.col-md-6
            form(role="form" action="" method="POST")
                div.form-group
                    label(for="name")= __('Beacon name')
                    input.form-control#name(required="true" maxlength="40" type="text" name="name" placeholder="Beacon name" value=beacon.name)
                div.form-group
                    label(for="uuid")= __('UUID')
                    input.form-control#uuid(required="true" type="text" name="uuid" placeholder="UUID" value=beacon.uuid)
                div.form-group
                    label(for="major")= __('Major')
                    input.form-control#major(required="true" max="65536" maxlength="5" type="text" name="major" placeholder="Major" value=beacon.major)
                div.form-group
                    label(for="minor")= __('Minor')
                    input.form-control#minor(required="true" max="65536" maxlength="5" type="text" name="minor" placeholder="Minor" value=beacon.minor)
                div.form-group
                    label(for="cash_register")= __('Cash register')
                    input.float-checkbox#cash_register(type="checkbox" name="cash_register" checked=beacon.cash_register)
                div.form-group
                    label(for="store")= __('Store')
                    select.form-control(name="store")
                        for store in stores
                            option(value=store.id selected=beacon.store_id === store.id) #{store.name}
                input.btn.btn-success.pull-right(type='submit' value=__('Save beacon'))
block append footer_scripts